doctype html
html
  head
    title Our First Date
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
    style.
      @import url('https://fonts.googleapis.com/css2?family=Pacifico&display=swap');
      body {
        font-family: 'Pacifico', cursive;
        background: linear-gradient(to right, #ff6f61, #ffcc33);
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        height: 100vh;
        margin: 0;
        color: #fff;
        text-align: center;
        padding: 20px;
      }
      h1 {
        font-size: 3em;
        margin-bottom: 20px;
        animation: fadeIn 2s;
      }
      .photo-grid {
        position: relative;
        width: 90%;
        max-width: 800px;
        height: 400px;
        margin-bottom: 20px;
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
      }
      .photo-grid img {
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
        transition: opacity 1s;
      }
      .photo-grid img.active {
        opacity: 1;
      }
      .story {
        font-size: 1.5em;
        line-height: 1.6;
        max-width: 90%;
        margin: 0 auto;
        animation: fadeInUp 2s;
      }
      .emojis {
        font-size: 2em;
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
